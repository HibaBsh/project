
@{
    Layout = null;
}
@model SignUpViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="author" content="Kodinger">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>My Login Page</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/my-login.css">
</head>
<body class="my-login-page">
    <form method="POST" class="my-login-validation" novalidate="">
        <section class="h-100">
            <div class="container h-100">
                <div class="row justify-content-md-center h-100" style="margin-top:50px">
                    <div class="card-wrapper">

                        <div class="card fat" style="width:400px;height:550px">
                            <div class="card-body">
                                <h4 class="card-title">Sign Up</h4>

                                <div class="form-group">
                                    <label class="control-label" for="name">Name</label>
                                    <input type="text" class="form-control" asp-for="signUpModel.Name" />
                                    <span asp-validation-for="signUpModel.Name"></span>
                                </div>



                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">Email</label>
                                        <input type="email" class="form-control" asp-for="signUpModel.Email" />
                                        <span asp-validation-for="signUpModel.Email"></span>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">Password</label>
                                        <input type="password" class="form-control" asp-for="signUpModel.Password" />
                                        <span asp-validation-for="signUpModel.Password"></span>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">Confirm Password</label>
                                        <input type="password" class="form-control" asp-for="signUpModel.ConfirmPassword" />
                                        <span asp-validation-for="signUpModel.ConfirmPassword"></span>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label class="control-label">Role</label>
                                        <select class="form-control" asp-items='new SelectList(Model.LiRoles,"Id","Name")' asp-for="signUpModel.RoleID"></select>
                                    </div>
                                </div>

                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <input type="submit" style="background-color: #6f42c1" value="Create Account" class="btn btn-primary btn-block" asp-action="CreateAccount" />
                                    </div>
                                </div>
                                <div class="mt-4 text-center">
                                    Click Here to  <a asp-action="SignIn" asp-controller="Account" style="color: #6f42c1">Sign In</a>
                                </div>
                                <div class="footer">
                                    Copyright &copy; 2022 &mdash; Book Container
                                </div>
                            </div>

                        </div>
                    </div>
</div>
                </div>
        </section>
    </form>


    

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="js/my-login.js"></script>
</body>
</html>