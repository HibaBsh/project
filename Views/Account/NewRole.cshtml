
@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@model RoleModel

@section Body {
    <form method="post">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <input type="submit" style="border: 1px solid #6f42c1" value="Save" class="btn btn-primary" asp-action="SaveRole" />
                    </div>
                </div>
            </div>
        </div>
    </form>
}
