
@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@model vmNationality

@section Body
{
    <form method="post">
        <div class="row" style="margin-top:20px">

            <div class="col-lg-1" style="margin-top:15px">
                <span style="margin-left:15px">Name</span>
            </div>
            <div class="col-lg-5" style="margin-top:15px">
                <input type="text" class="form-control" asp-for="nationality.Name" />
                <span asp-validation-for="nationality.Name"></span>
            </div>
            <div class="col-lg-2" style="margin-top:15px">
                <input type="submit" value="Save" class="btn btn-primary" asp-action="Save" />
            </div>
        </div>

        <div class="row" style="margin-top:15px">
            <div class="col-lg-7">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Nationality item in Model.linationality)
                        {
                            <tr>
                                <td>@item.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>



    </form>
}
